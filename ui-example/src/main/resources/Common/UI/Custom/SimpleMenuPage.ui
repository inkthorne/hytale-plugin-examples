Group {
    LayoutMode: Center;

    Group #MenuContainer {
        Anchor: (Width: 400, Height: 300);
        Background: #333333(0.9);

        Label #Title {
            Style: (FontSize: 24, TextColor: #FFFFFF, Alignment: Center);
            Text: "Simple Menu";
        }

        Group #OptionsPanel {
            LayoutMode: Top;
            Anchor: (Top: 60);

            Label #Option1 {
                Style: (FontSize: 16, TextColor: #FFFFFF, Alignment: Center);
                Text: "Option 1";
            }

            Label #Option2 {
                Style: (FontSize: 16, TextColor: #FFFFFF, Alignment: Center);
                Text: "Option 2";
            }

            Label #Option3 {
                Style: (FontSize: 16, TextColor: #FFFFFF, Alignment: Center);
                Text: "Option 3";
            }
        }

        Label #CloseHint {
            Anchor: (Bottom: 20);
            Style: (FontSize: 12, TextColor: #AAAAAA, Alignment: Center);
            Text: "Press ESC to close";
        }
    }
}
